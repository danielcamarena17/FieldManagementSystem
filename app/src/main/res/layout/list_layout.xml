<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Name"
        android:textColor="#151515"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvListEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvListName"
        android:layout_below="@+id/tvListPhone"
        android:fontFamily="@font/nunito_bold"
        android:text="Email"
        android:textColor="#151515"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvListPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvListName"
        android:layout_below="@+id/tvListPosition"
        android:fontFamily="@font/nunito_bold"
        android:text="Phone"
        android:textColor="#151515"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvListPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvListName"
        android:layout_below="@+id/tvListName"
        android:fontFamily="@font/nunito_bold"
        android:text="Position"
        android:textColor="#151515"
        android:textSize="16sp" />

</RelativeLayout>